# ============================================
# Hatch Stock Management - Backend Configuration
# ============================================
# Copy this file to .env and fill in your values

# Server
PORT=8000
NODE_ENV=development

# Frontend URL (for CORS) - can be comma-separated for multiple origins
# Development: http://localhost:3000,http://localhost:5173
# Production: https://your-app.vercel.app,https://yourdomain.com
FRONTEND_URL=http://localhost:3001

# ============================================
# DATABASE CONNECTION - Supabase
# ============================================
# Get this from Supabase Dashboard > Settings > Database > Connection String
# Note: Special characters in password must be URL-encoded (e.g., ! = %21)
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_ID.supabase.co:5432/postgres"

# ============================================
# AUTHENTICATION (Optional)
# ============================================
AUTH_ENABLED=false
JWT_SECRET=your-secret-key-change-in-production

# ============================================
# AI FEATURES (Optional - for invoice/screenshot analysis)
# ============================================
# ANTHROPIC_API_KEY=sk-ant-...
